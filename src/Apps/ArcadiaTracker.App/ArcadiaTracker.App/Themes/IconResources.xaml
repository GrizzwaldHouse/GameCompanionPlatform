<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Hybrid Icon System                             -->
    <!-- MDL2 for standard UI, Custom Path for branded  -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- MDL2 Font Family -->
    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- MDL2 Icons (Standard UI Elements)              -->
    <!-- ═══════════════════════════════════════════════ -->
    <sys:String x:Key="SettingsIcon">&#xE713;</sys:String>
    <sys:String x:Key="ExportIcon">&#xE74E;</sys:String>
    <sys:String x:Key="NotificationIcon">&#xE7E7;</sys:String>
    <sys:String x:Key="MapIcon">&#xE707;</sys:String>
    <sys:String x:Key="RoadmapIcon">&#xE7C1;</sys:String>
    <sys:String x:Key="ResearchIcon">&#xE82F;</sys:String>
    <sys:String x:Key="SessionsIcon">&#xE787;</sys:String>
    <sys:String x:Key="PlayStatsIcon">&#xE9D9;</sys:String>
    <sys:String x:Key="AchievementsIcon">&#xE838;</sys:String>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Custom Path Geometry Icons (Branded Elements)  -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Dashboard - 4-square grid icon -->
    <PathGeometry x:Key="DashboardIcon" Figures="M2,2 L8,2 L8,8 L2,8 Z M10,2 L16,2 L16,8 L10,8 Z M2,10 L8,10 L8,16 L2,16 Z M10,10 L16,10 L16,16 L10,16 Z"/>

    <!-- Progression - Trending arrow up -->
    <PathGeometry x:Key="ProgressionIcon" Figures="M2,14 L6,10 L10,12 L14,6 L14,10 M14,2 L18,2 L14,6 L14,2 M14,2 L18,6"/>

    <!-- Production - Factory building with smokestacks -->
    <PathGeometry x:Key="ProductionIcon" Figures="M2,12 L6,12 L6,8 L10,8 L10,4 L14,4 L14,12 L18,12 L18,18 L2,18 Z M11,2 L11,3 M13,2 L13,3"/>

    <!-- Admin Shield - Shield with lock -->
    <PathGeometry x:Key="AdminShieldIcon" Figures="M10,2 L18,6 L18,10 C18,14 14,18 10,20 C6,18 2,14 2,10 L2,6 Z M10,8 C10.5,8 11,8.5 11,9 L11,11 C11,11.5 10.5,12 10,12 C9.5,12 9,11.5 9,11 L9,9 C9,8.5 9.5,8 10,8 Z M9,9 L11,9"/>

    <!-- Activate Feature - Key icon -->
    <PathGeometry x:Key="ActivateKeyIcon" Figures="M14,2 C16.2,2 18,3.8 18,6 C18,8.2 16.2,10 14,10 L10,10 L10,12 L8,12 L8,10 L6,10 L6,8 L8,8 L8,6 L10,6 L10,4 L14,4 C12.9,4 12,4.9 12,6 C12,7.1 12.9,8 14,8 C15.1,8 16,7.1 16,6 C16,4.9 15.1,4 14,4 Z"/>

    <!-- Save Editor - Pencil with document -->
    <PathGeometry x:Key="SaveEditorIcon" Figures="M4,2 L12,2 L16,6 L16,18 L4,18 Z M12,2 L12,6 L16,6 M14,10 L18,6 L16,4 L12,8 L12,10 Z M12,8 L14,10"/>

    <!-- Save Inspector - Magnifying glass -->
    <PathGeometry x:Key="SaveInspectorIcon" Figures="M8,2 C11.3,2 14,4.7 14,8 C14,9.4 13.5,10.7 12.7,11.7 L18,17 L17,18 L11.7,12.7 C10.7,13.5 9.4,14 8,14 C4.7,14 2,11.3 2,8 C2,4.7 4.7,2 8,2 Z M8,4 C5.8,4 4,5.8 4,8 C4,10.2 5.8,12 8,12 C10.2,12 12,10.2 12,8 C12,5.8 10.2,4 8,4 Z"/>

    <!-- Backup Manager - Floppy disk (retro sci-fi) -->
    <PathGeometry x:Key="BackupManagerIcon" Figures="M4,2 L14,2 L18,6 L18,18 L2,18 L2,2 Z M4,2 L4,6 L12,6 L12,2 M6,10 L14,10 L14,16 L6,16 Z M8,12 L12,12"/>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Admin Panel Status Icons                       -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Active - Circle with checkmark -->
    <PathGeometry x:Key="StatusActiveIcon" Figures="M10,2 C14.4,2 18,5.6 18,10 C18,14.4 14.4,18 10,18 C5.6,18 2,14.4 2,10 C2,5.6 5.6,2 10,2 Z M8,12 L6,10 L7,9 L8,10 L12,6 L13,7 Z"/>

    <!-- Expired - Circle with X -->
    <PathGeometry x:Key="StatusExpiredIcon" Figures="M10,2 C14.4,2 18,5.6 18,10 C18,14.4 14.4,18 10,18 C5.6,18 2,14.4 2,10 C2,5.6 5.6,2 10,2 Z M7,7 L10,10 L13,7 L14,8 L11,11 L14,14 L13,15 L10,12 L7,15 L6,14 L9,11 L6,8 Z"/>

    <!-- Warning - Triangle with exclamation -->
    <PathGeometry x:Key="StatusWarningIcon" Figures="M10,2 L18,18 L2,18 Z M10,8 L10,12 M10,14 L10,15"/>

    <!-- Success - Checkmark -->
    <PathGeometry x:Key="StatusSuccessIcon" Figures="M2,10 L8,16 L18,4"/>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Section Header Icons                           -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Security - Shield with lock -->
    <PathGeometry x:Key="SecurityIcon" Figures="M10,2 L18,6 L18,10 C18,14 14,18 10,20 C6,18 2,14 2,10 L2,6 Z M10,8 C10.5,8 11,8.5 11,9 L11,11 C11,11.5 10.5,12 10,12 C9.5,12 9,11.5 9,11 L9,9 C9,8.5 9.5,8 10,8 Z"/>

    <!-- Diagnostics - Bar chart -->
    <PathGeometry x:Key="DiagnosticsIcon" Figures="M2,16 L6,16 L6,10 L2,10 Z M8,16 L12,16 L12,6 L8,6 Z M14,16 L18,16 L18,2 L14,2 Z"/>

    <!-- Tools - Wrench -->
    <PathGeometry x:Key="ToolsIcon" Figures="M16,2 L16,6 L14,8 L12,6 L6,12 L8,14 L2,20 L2,18 L6,14 L4,12 L10,6 L8,4 L10,2 Z M16,2 C17.1,2 18,2.9 18,4 C18,5.1 17.1,6 16,6"/>

</ResourceDictionary>
