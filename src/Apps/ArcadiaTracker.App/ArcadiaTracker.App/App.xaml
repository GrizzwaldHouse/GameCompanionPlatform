<Application x:Class="ArcadiaTracker.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ArcadiaTracker.App"
             xmlns:conv="clr-namespace:ArcadiaTracker.App.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/StarRuptureTheme.xaml"/>
                <ResourceDictionary Source="Themes/IconResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <conv:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
            <conv:IntToVisibilityInverseConverter x:Key="IntToVisibilityInverseConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
