<UserControl x:Class="ArcadiaTracker.App.Views.ProductionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <TabControl Background="{StaticResource BackgroundBrush}"
                BorderThickness="0">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </TabControl.Resources>

        <!-- Overview Tab -->
        <TabItem Header="Overview">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Production Overview" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="Machine status and efficiency across all bases"
                               Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

                    <!-- Top Stats Cards -->
                    <UniformGrid Columns="5" Margin="0,0,0,16">
                        <!-- Total Machines -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="âš™ï¸ TOTAL MACHINES" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock x:Name="TotalMachinesText" Text="0"
                                           FontSize="28" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Running -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="âœ… RUNNING" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock x:Name="RunningText" Text="0"
                                           FontSize="28" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Disabled -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="â¸ï¸ DISABLED" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock x:Name="DisabledText" Text="0"
                                           FontSize="28" FontWeight="Bold"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Malfunction -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="âš ï¸ MALFUNCTION" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock x:Name="MalfunctionText" Text="0"
                                           FontSize="28" FontWeight="Bold"
                                           Foreground="{StaticResource WarningBrush}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Efficiency -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š EFFICIENCY" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock x:Name="EfficiencyText" Text="0%"
                                           FontSize="28" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Category Breakdown -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Category Breakdown" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                            <ItemsControl x:Name="CategoryList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                                Background="{StaticResource SurfaceLightBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Category}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Margin="0,0,16,0"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding Running}" Foreground="{StaticResource SuccessBrush}"/>
                                                    <Run Text=" / " Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <Run Text="{Binding Total}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="2" VerticalAlignment="Center" MinWidth="60">
                                                    <Run Text="{Binding EfficiencyPercent, StringFormat='{}{0:F1}%'}"
                                                         Foreground="{StaticResource PrimaryBrush}"
                                                         FontWeight="Bold"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="NoCategoriesText"
                                       Text="No category data available"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Visibility="Collapsed"
                                       HorizontalAlignment="Center"
                                       Margin="0,8"/>
                        </StackPanel>
                    </Border>

                    <!-- Power Grid Summary -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Power Grid Summary" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="âš¡ Total Grids:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,8,0"/>
                                <TextBlock x:Name="PowerGridCountText" Text="0"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="Bold"/>
                            </StackPanel>
                            <ItemsControl x:Name="PowerGridList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                                Background="{StaticResource SurfaceLightBrush}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Grid " Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding GridId}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold" Margin="0,0,8,0"/>
                                                <TextBlock Text="-" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding NodeCount}"
                                                           Foreground="{StaticResource SecondaryBrush}"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text=" nodes" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- Compare Bases Tab -->
        <TabItem Header="Compare Bases">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Base Comparison" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="Compare efficiency and machines across bases"
                               Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

                    <!-- Base List -->
                    <ItemsControl x:Name="BaseList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding BaseName}" FontSize="16" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,12"/>

                                        <!-- Efficiency Bar -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ProgressBar Value="{Binding EfficiencyPercent}" Maximum="100"
                                                         Style="{StaticResource SciFiProgressBar}"
                                                         Height="12"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding EfficiencyPercent, StringFormat='{}{0:F1}%'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Stats -->
                                        <UniformGrid Columns="4">
                                            <StackPanel Margin="0,0,8,0">
                                                <TextBlock Text="Total" FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding TotalBuildings}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="Bold" FontSize="18"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,0,8,0">
                                                <TextBlock Text="Running" FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding OperationalBuildings}"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           FontWeight="Bold" FontSize="18"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,0,8,0">
                                                <TextBlock Text="Disabled" FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding DisabledBuildings}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontWeight="Bold" FontSize="18"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Malfunction" FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding MalfunctioningBuildings}"
                                                           Foreground="{StaticResource WarningBrush}"
                                                           FontWeight="Bold" FontSize="18"/>
                                            </StackPanel>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <TextBlock x:Name="NoBasesText"
                               Text="No base data available"
                               Foreground="{StaticResource TextMutedBrush}"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,24"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
