<UserControl x:Class="ArcadiaTracker.App.Views.LogisticsHeatmapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Logistics Heatmap" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Visualize traffic density and identify congestion hotspots"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Columns="5" Margin="0,0,0,16">
            <!-- Active Requests -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="ACTIVE REQUESTS" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="ActiveRequestsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Average Density -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="AVG DENSITY" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="AvgDensityText" Text="0.0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Congestion Zones -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="CONGESTION ZONES" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="CongestionText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Dead Zones -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="DEAD ZONES" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="DeadZonesText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource WarningBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Critical Cells -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="CRITICAL CELLS" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="CriticalCellsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Content Area -->
        <TabControl Grid.Row="2" Background="{StaticResource BackgroundBrush}" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!-- Heat Legend -->
            <TabItem Header="Traffic Overview">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Heat Level Legend -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Heat Level Legend" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            <UniformGrid Columns="5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Background="#333" CornerRadius="4" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="None" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="NoneCellCount" Text="0 cells" FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Background="#2D5A27" CornerRadius="4" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Low" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="LowCellCount" Text="0 cells" FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Background="#7D6B2D" CornerRadius="4" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Medium" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="MediumCellCount" Text="0 cells" FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Background="#A85D2D" CornerRadius="4" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="High" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="HighCellCount" Text="0 cells" FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Background="#8B2D2D" CornerRadius="4" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Critical" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="CriticalCellCountLegend" Text="0 cells" FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Cell Grid (simplified list view) -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Active Traffic Cells" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="CellList">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="60" Height="60" Margin="4" CornerRadius="4"
                                                    ToolTip="{Binding RequestCount, StringFormat='{}{0} requests'}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#333"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Heat}" Value="Low">
                                                                <Setter Property="Background" Value="#2D5A27"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Heat}" Value="Medium">
                                                                <Setter Property="Background" Value="#7D6B2D"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Heat}" Value="High">
                                                                <Setter Property="Background" Value="#A85D2D"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Heat}" Value="Critical">
                                                                <Setter Property="Background" Value="#8B2D2D"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding RequestCount}"
                                                           FontWeight="Bold" FontSize="16"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Congestion Zones Tab -->
            <TabItem Header="Congestion Zones">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl x:Name="CongestionList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12"
                                            BorderBrush="{StaticResource ErrorBrush}" BorderThickness="2,0,0,0">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Congestion Zone" FontSize="16" FontWeight="Bold"
                                                           Foreground="{StaticResource ErrorBrush}"/>
                                                <TextBlock Grid.Column="1" FontSize="14" FontWeight="Bold"
                                                           Foreground="{StaticResource TextPrimaryBrush}">
                                                    <Run Text="{Binding RequestCount}"/>
                                                    <Run Text=" requests" FontWeight="Normal" FontSize="12"/>
                                                </TextBlock>
                                            </Grid>

                                            <TextBlock Text="{Binding Cause}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,8,0,0"/>
                                            <TextBlock Text="{Binding Recommendation}" FontSize="11"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       Margin="0,8,0,0" FontStyle="Italic"/>

                                            <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                                       Margin="0,8,0,0">
                                                <Run Text="Location: ("/>
                                                <Run Text="{Binding Center.X, StringFormat='{}{0:F0}'}"/>
                                                <Run Text=", "/>
                                                <Run Text="{Binding Center.Y, StringFormat='{}{0:F0}'}"/>
                                                <Run Text=")"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoCongestionText" Text="No congestion zones detected!"
                                   Foreground="{StaticResource SuccessBrush}"
                                   HorizontalAlignment="Center" Margin="0,24"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Dead Zones Tab -->
            <TabItem Header="Dead Zones">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl x:Name="DeadZoneList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12"
                                            BorderBrush="{StaticResource WarningBrush}" BorderThickness="2,0,0,0">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Dead Zone" FontSize="16" FontWeight="Bold"
                                                           Foreground="{StaticResource WarningBrush}"/>
                                                <TextBlock Grid.Column="1" FontSize="14" FontWeight="Bold"
                                                           Foreground="{StaticResource TextPrimaryBrush}">
                                                    <Run Text="{Binding EntityCount}"/>
                                                    <Run Text=" buildings" FontWeight="Normal" FontSize="12"/>
                                                </TextBlock>
                                            </Grid>

                                            <TextBlock Text="{Binding PossibleReason}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,8,0,0"/>

                                            <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                                       Margin="0,8,0,0">
                                                <Run Text="Location: ("/>
                                                <Run Text="{Binding Center.X, StringFormat='{}{0:F0}'}"/>
                                                <Run Text=", "/>
                                                <Run Text="{Binding Center.Y, StringFormat='{}{0:F0}'}"/>
                                                <Run Text=")"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoDeadZonesText" Text="No dead zones detected!"
                                   Foreground="{StaticResource SuccessBrush}"
                                   HorizontalAlignment="Center" Margin="0,24"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
