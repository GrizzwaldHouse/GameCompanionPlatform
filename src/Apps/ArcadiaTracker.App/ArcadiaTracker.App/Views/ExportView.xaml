<UserControl x:Class="ArcadiaTracker.App.Views.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ArcadiaTracker.App.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Export Data" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="Export your game data to CSV or Excel format"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

            <!-- Export Options Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Export Options" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <!-- Format Selection -->
                    <TextBlock Text="Format" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox x:Name="FormatCombo"
                              Background="{StaticResource SurfaceLightBrush}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource PrimaryBrush}"
                              SelectedIndex="0"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="CSV"/>
                        <ComboBoxItem Content="Excel"/>
                    </ComboBox>

                    <!-- Data Type Selection -->
                    <TextBlock Text="Data Type" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox x:Name="DataTypeCombo"
                              Background="{StaticResource SurfaceLightBrush}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource PrimaryBrush}"
                              SelectedIndex="0"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="All Data"/>
                        <ComboBoxItem Content="Player Progress"/>
                        <ComboBoxItem Content="Production Summary"/>
                        <ComboBoxItem Content="Session History"/>
                        <ComboBoxItem Content="Corporations"/>
                        <ComboBoxItem Content="Badges"/>
                        <ComboBoxItem Content="Buildings"/>
                        <ComboBoxItem Content="Power Grids"/>
                    </ComboBox>

                    <!-- Export Button -->
                    <Button Content="ðŸ“¥ Export Data"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="ExportButton_Click"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Export History Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Export History" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <ItemsControl x:Name="ExportHistoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                        Background="{StaticResource SurfaceLightBrush}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- File Path -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding FilePath}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Details -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0">
                                                <Run Text="ðŸ“…"/>
                                                <Run Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>
                                            </TextBlock>
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0">
                                                <Run Text="ðŸ“Š"/>
                                                <Run Text="{Binding RowCount}"/>
                                                <Run Text=" rows"/>
                                            </TextBlock>
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="ðŸ’¾"/>
                                                <Run Text="{Binding SizeDisplay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <TextBlock x:Name="NoExportsText"
                               Text="No exports yet. Create your first export above!"
                               Foreground="{StaticResource TextMutedBrush}"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,16"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
