<UserControl x:Class="ArcadiaTracker.App.Views.AchievementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ArcadiaTracker.App.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Achievements" Style="{StaticResource HeaderTextStyle}"/>
                <Border Grid.Column="1"
                        Background="{StaticResource PrimaryBrush}"
                        CornerRadius="12" Padding="12,6">
                    <TextBlock x:Name="CompletionCountText" Text="0 / 0"
                               Foreground="{StaticResource BackgroundBrush}"
                               FontWeight="Bold" FontSize="14"/>
                </Border>
            </Grid>
            <TextBlock Text="Steam achievement cross-reference and tracking"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

            <!-- Summary Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Summary" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <!-- Earned Count -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ… Earned:"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="EarnedCountText" Text="0"
                                       Foreground="{StaticResource SuccessBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Locked Count -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ”’ Locked:"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="LockedCountText" Text="0"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Completion Percentage -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“ˆ Completion:"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="CompletionPercentText" Text="0%"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Steam API Status -->
                    <Border Grid.Column="1"
                            Background="{StaticResource SurfaceLightBrush}"
                            CornerRadius="8" Padding="12,8"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Steam API" FontSize="11"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Center"/>
                            <Border x:Name="SteamStatusIndicator"
                                    Background="{StaticResource SuccessBrush}"
                                    Width="12" Height="12"
                                    CornerRadius="6"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,0"/>
                            <TextBlock x:Name="SteamStatusText" Text="Connected"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Filter Buttons -->
            <UniformGrid Columns="4" Margin="0,0,0,16">
                <Button x:Name="FilterAllButton"
                        Content="All"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="FilterAll_Click"
                        Margin="0,0,4,0"/>
                <Button x:Name="FilterEarnedButton"
                        Content="Earned"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="FilterEarned_Click"
                        Margin="4,0,4,0"/>
                <Button x:Name="FilterLockedButton"
                        Content="Locked"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="FilterLocked_Click"
                        Margin="4,0,4,0"/>
                <Button x:Name="FilterMismatchedButton"
                        Content="Mismatched"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="FilterMismatched_Click"
                        Margin="4,0,0,0"/>
            </UniformGrid>

            <!-- Achievements List -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Achievements List" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <ItemsControl x:Name="AchievementsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                        Background="{Binding BackgroundBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                   FontSize="32" Margin="0,0,16,0"
                                                   VerticalAlignment="Center"/>

                                        <!-- Name and Description -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       Margin="0,4,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Status Display -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center"
                                                    HorizontalAlignment="Right" Margin="16,0,0,0">
                                            <Border Background="{Binding StatusBadgeBrush}"
                                                    CornerRadius="8" Padding="8,4">
                                                <TextBlock Text="{Binding StatusDisplay}"
                                                           Foreground="{StaticResource BackgroundBrush}"
                                                           FontWeight="Bold" FontSize="11"/>
                                            </Border>
                                            <TextBlock Text="{Binding GlobalUnlockDisplay}"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"
                                                       Visibility="{Binding HasGlobalUnlock, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <TextBlock x:Name="NoAchievementsText"
                               Text="No achievements to display"
                               Foreground="{StaticResource TextMutedBrush}"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,16"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
