<UserControl x:Class="ArcadiaTracker.App.Views.DepletionForecastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Resource Depletion Forecast" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Predict resource sustainability and prevent shortages"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Columns="5" Margin="0,0,0,16">
            <!-- Sustainability Score -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SUSTAINABILITY" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="SustainabilityText" Text="0%"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Sustainable -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SUSTAINABLE" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="SustainableText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource SuccessBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Depleting -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="DEPLETING" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="DepletingText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource WarningBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Critical -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="CRITICAL" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="CriticalText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Alerts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="ALERTS" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="AlertsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Content Area -->
        <TabControl Grid.Row="2" Background="{StaticResource BackgroundBrush}" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!-- Resource Forecasts -->
            <TabItem Header="Resource Forecasts">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ForecastsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding ResourceType}" FontSize="16" FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                                            <Grid Margin="0,12,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Current" FontSize="10"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                    <TextBlock FontSize="14" FontWeight="Bold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               Text="{Binding CurrentAmount, StringFormat='{}{0:F0}'}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Production" FontSize="10"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                    <TextBlock FontSize="14" FontWeight="Bold"
                                                               Foreground="{StaticResource SuccessBrush}">
                                                        <Run Text="+"/>
                                                        <Run Text="{Binding ProductionRate, StringFormat='{}{0:F0}'}"/>
                                                        <Run Text="/min" FontSize="10"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Consumption" FontSize="10"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                    <TextBlock FontSize="14" FontWeight="Bold"
                                                               Foreground="{StaticResource ErrorBrush}">
                                                        <Run Text="-"/>
                                                        <Run Text="{Binding ConsumptionRate, StringFormat='{}{0:F0}'}"/>
                                                        <Run Text="/min" FontSize="10"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" MinWidth="120"
                                                    HorizontalAlignment="Right">
                                            <TextBlock HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Sustainable">
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Critical">
                                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Declining">
                                                                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding Status}" FontWeight="Bold" FontSize="14"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding TimeDisplay}" FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Alerts -->
            <TabItem Header="Alerts">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl x:Name="AlertsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" Padding="16,12" CornerRadius="8"
                                            Background="{StaticResource SurfaceLightBrush}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Emergency">
                                                        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding ResourceType}"
                                                           FontWeight="Bold" FontSize="14"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Severity}"
                                                           FontWeight="Bold" FontSize="11"
                                                           Foreground="{StaticResource ErrorBrush}"/>
                                            </Grid>

                                            <TextBlock Text="{Binding Message}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,8,0,0"/>

                                            <TextBlock FontSize="11" Margin="0,8,0,0"
                                                       Foreground="{StaticResource TextMutedBrush}">
                                                <Run Text="Impacted: "/>
                                                <Run Text="{Binding ImpactedSystems, Converter={StaticResource ListToStringConverter}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoAlertsText" Text="No alerts - resources are stable!"
                                   Foreground="{StaticResource SuccessBrush}"
                                   HorizontalAlignment="Center" Margin="0,24"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Mitigations -->
            <TabItem Header="Recommendations">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="MitigationsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" FontSize="14" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryBrush}">
                                                <Run Text="{Binding ResourceType}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding Strategy}"/>
                                            </TextBlock>

                                            <Border Grid.Column="1" Padding="8,4" CornerRadius="4"
                                                    Background="{StaticResource SurfaceLightBrush}">
                                                <TextBlock FontSize="10">
                                                    <Run Text="Effort: " Foreground="{StaticResource TextMutedBrush}"/>
                                                    <Run Text="{Binding Effort}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="{Binding Description}" FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,8,0,0"/>

                                        <TextBlock FontSize="11" Margin="0,8,0,0">
                                            <Run Text="Expected improvement: " Foreground="{StaticResource TextMutedBrush}"/>
                                            <Run Text="{Binding ExpectedImprovement, StringFormat='{}{0:F0}%'}"
                                                 Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
