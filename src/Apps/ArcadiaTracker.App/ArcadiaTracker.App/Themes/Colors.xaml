<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Arcadia Design System — Canonical Color Tokens  -->
    <!-- Single source of truth. Do NOT duplicate in     -->
    <!-- other theme files.                              -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Primary -->
    <Color x:Key="PrimaryColor">#00FFC8</Color>
    <Color x:Key="PrimaryDarkColor">#00A88C</Color>
    <Color x:Key="PrimaryGlowColor">#4000FFC8</Color>

    <!-- Secondary / Accent -->
    <Color x:Key="SecondaryColor">#FF5E5E</Color>
    <Color x:Key="SecondaryGlowColor">#40FF5E5E</Color>
    <Color x:Key="AccentColor">#9C6EFF</Color>
    <Color x:Key="AccentGoldColor">#FFD700</Color>
    <Color x:Key="AccentGoldGlowColor">#40FFD700</Color>

    <!-- Backgrounds -->
    <Color x:Key="BackgroundColor">#0A0A0F</Color>
    <Color x:Key="BackgroundGradientEnd">#0F0F1A</Color>

    <!-- Surfaces -->
    <Color x:Key="SurfaceColor">#1B1D2B</Color>
    <Color x:Key="SurfaceHoverColor">#252738</Color>
    <Color x:Key="SurfaceActiveColor">#2A2A50</Color>
    <Color x:Key="SurfaceLightColor">#252738</Color>
    <Color x:Key="SurfaceHighColor">#3A3A5E</Color>

    <!-- Text -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
    <Color x:Key="TextMutedColor">#606070</Color>

    <!-- Semantic -->
    <Color x:Key="ErrorColor">#FF4C4C</Color>
    <Color x:Key="SuccessColor">#4CFF9C</Color>
    <Color x:Key="WarningColor">#FF6B35</Color>
    <Color x:Key="BorderColor">#2A2A4A</Color>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Brush Definitions                               -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Primary -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryGlowBrush" Color="{StaticResource PrimaryGlowColor}"/>

    <!-- Secondary / Accent -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryGlowBrush" Color="{StaticResource SecondaryGlowColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentGoldBrush" Color="{StaticResource AccentGoldColor}"/>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>

    <!-- Surfaces -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="SurfaceHighBrush" Color="{StaticResource SurfaceHighColor}"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>

    <!-- Semantic -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

    <!-- ═══════════════════════════════════════════════ -->
    <!-- Compatibility Aliases                           -->
    <!-- Used by ActivationView and other views that     -->
    <!-- reference non-standard resource names.          -->
    <!-- ═══════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="Neutral900Brush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="Neutral800Brush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="Neutral700Brush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="Neutral600Brush" Color="{StaticResource BorderColor}"/>

    <!-- SciFi card brushes (used by ProductionView, PowerGridView) -->
    <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BgCardHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>

</ResourceDictionary>
