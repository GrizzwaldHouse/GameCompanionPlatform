<UserControl x:Class="ArcadiaTracker.App.Views.ExpansionAdvisorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Expansion Advisor" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Plan your base expansion strategically"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Columns="5" Margin="0,0,0,16">
            <!-- Expansion Ready -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="READY TO EXPAND" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="ReadyText" Text="No"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Sites Found -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SITES FOUND" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="SitesText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Buildings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TOTAL BUILDINGS" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="BuildingsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Base Efficiency -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="BASE EFFICIENCY" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="EfficiencyText" Text="0%"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource SuccessBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Warnings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="WARNINGS" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock x:Name="WarningsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource WarningBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Content Area -->
        <TabControl Grid.Row="2" Background="{StaticResource BackgroundBrush}" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!-- Recommended Sites -->
            <TabItem Header="Recommended Sites">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="SitesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock FontSize="16" FontWeight="Bold"
                                                           Foreground="{StaticResource PrimaryBrush}">
                                                    <Run Text="Expansion Site - "/>
                                                    <Run Text="{Binding RecommendedPurpose}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Reason}" FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Padding="12,6" CornerRadius="4"
                                                    Background="{StaticResource SecondaryBrush}">
                                                <TextBlock FontSize="14" FontWeight="Bold" Foreground="White">
                                                    <Run Text="Score: "/>
                                                    <Run Text="{Binding Score, StringFormat='{}{0:F0}'}"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <!-- Advantages -->
                                        <TextBlock Text="Advantages:" FontWeight="SemiBold"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   Margin="0,12,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Advantages}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                                        <Run Text="  + "/>
                                                        <Run Text="{Binding}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Challenges -->
                                        <TextBlock Text="Challenges:" FontWeight="SemiBold"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   Margin="0,8,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Challenges}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                                        <Run Text="  - "/>
                                                        <Run Text="{Binding}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Position -->
                                        <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                                   Margin="0,8,0,0">
                                            <Run Text="Position: ("/>
                                            <Run Text="{Binding Position.X, StringFormat='{}{0:F0}'}"/>
                                            <Run Text=", "/>
                                            <Run Text="{Binding Position.Y, StringFormat='{}{0:F0}'}"/>
                                            <Run Text=") - Distance: "/>
                                            <Run Text="{Binding DistanceFromMainBase, StringFormat='{}{0:F0}'}"/>
                                            <Run Text="m"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Requirements -->
            <TabItem Header="Requirements">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Expansion Requirements" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <StackPanel x:Name="RequirementsList" Margin="0,0,0,24">
                            <!-- Populated programmatically -->
                        </StackPanel>

                        <TextBlock Text="Missing Requirements:" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource WarningBrush}" Margin="0,0,0,8"/>
                        <ItemsControl x:Name="MissingList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="â€¢ " Foreground="{StaticResource WarningBrush}"/>
                                        <Run Text="{Binding}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Warnings -->
            <TabItem Header="Warnings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl x:Name="WarningsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" Padding="16,12" CornerRadius="8"
                                            Background="{StaticResource SurfaceLightBrush}"
                                            BorderThickness="2,0,0,0" BorderBrush="{StaticResource WarningBrush}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,4,0,0"/>
                                            <TextBlock FontSize="11" Margin="0,8,0,0">
                                                <Run Text="Mitigation: " Foreground="{StaticResource TextMutedBrush}"/>
                                                <Run Text="{Binding Mitigation}" Foreground="{StaticResource PrimaryBrush}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoWarningsText" Text="No warnings - you're ready to expand!"
                                   Foreground="{StaticResource SuccessBrush}"
                                   HorizontalAlignment="Center" Margin="0,24"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
