<UserControl x:Class="ArcadiaTracker.App.Views.BuildPlannerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar: Plans List -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0"
                Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Build Plans" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <!-- Create New Plan Form -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Create New Plan" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>

                            <TextBox x:Name="NewPlanNameTextBox"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,8"
                                     Text="{Binding NewPlanName, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter plan name"/>

                            <TextBox x:Name="NewPlanDescriptionTextBox"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,8"
                                     Text="{Binding NewPlanDescription, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter plan description (optional)"
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <Button Content="Create Plan"
                                    Command="{Binding CreatePlanCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Plans List -->
                    <TextBlock Text="Saved Plans" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                    <ItemsControl x:Name="PlansList" ItemsSource="{Binding Plans}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="12" CornerRadius="8"
                                        Background="{StaticResource SurfaceLightBrush}"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.SelectPlanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Stats.TotalBuildings}"
                                                       Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                                            <TextBlock Text=" buildings" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                        </StackPanel>
                                        <ProgressBar Value="{Binding Stats.CompletionPercent}" Maximum="100"
                                                     Style="{StaticResource SciFiProgressBar}"
                                                     Height="6" Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Stats.CompletionPercent, StringFormat='{}{0:F1}% complete'}"
                                                   Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <TextBlock x:Name="NoPlansText"
                               Text="No plans yet. Create one above!"
                               Foreground="{StaticResource TextMutedBrush}"
                               Visibility="Collapsed"
                               TextAlignment="Center"
                               Margin="0,16"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel: Plan Details -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- Header -->
                <TextBlock Text="Build Planner" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="Plan and track your factory layouts"
                           Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

                <!-- Error Message -->
                <Border x:Name="ErrorBorder" Visibility="Collapsed"
                        Background="{StaticResource ErrorBrush}" CornerRadius="8"
                        Padding="12" Margin="0,0,0,16">
                    <TextBlock x:Name="ErrorText" Foreground="White" TextWrapping="Wrap"/>
                </Border>

                <!-- Selected Plan Details -->
                <Border x:Name="SelectedPlanPanel" Visibility="Collapsed">
                    <StackPanel>
                        <!-- Plan Header -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock x:Name="PlanNameText" FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="PlanDescriptionText"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" Margin="0,0,0,16"/>

                                <!-- Stats Cards -->
                                <UniformGrid Columns="5" Margin="0,0,0,8">
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="TOTAL" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock x:Name="TotalBuildingsText" Text="0"
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="BUILT" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock x:Name="BuiltCountText" Text="0"
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="REMAINING" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock x:Name="RemainingCountText" Text="0"
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="POWER" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock x:Name="PowerUsageText" Text="0 MW"
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{StaticResource WarningBrush}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="THROUGHPUT" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock x:Name="ThroughputText" Text="0/min"
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                    </StackPanel>
                                </UniformGrid>

                                <!-- Completion Bar -->
                                <ProgressBar x:Name="CompletionProgressBar" Maximum="100"
                                             Style="{StaticResource SciFiProgressBar}"
                                             Height="12" Margin="0,8,0,4"/>
                                <TextBlock x:Name="CompletionText" Text="0% Complete"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Buildings List -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Buildings" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                                <ItemsControl x:Name="BuildingsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                                    Background="{StaticResource SurfaceLightBrush}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsBuilt}"
                                                              Command="{Binding DataContext.MarkBuildingBuiltCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding Id}"
                                                              VerticalAlignment="Center" Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding BuildingType}" FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12">
                                                            <Run Text="Position: ("/>
                                                            <Run Text="{Binding Position.X, StringFormat='{}{0:F0}'}"/><Run Text=", "/>
                                                            <Run Text="{Binding Position.Y, StringFormat='{}{0:F0}'}"/><Run Text=", "/>
                                                            <Run Text="{Binding Position.Z, StringFormat='{}{0:F0}'}"/><Run Text=")"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                                               Foreground="{StaticResource SuccessBrush}"
                                                               FontSize="12" FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value=""/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsBuilt}" Value="True">
                                                                        <Setter Property="Text" Value="âœ“ Built"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="NoBuildingsText"
                                           Text="No buildings in this plan. Apply a template below."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Visibility="Collapsed"
                                           HorizontalAlignment="Center"
                                           Margin="0,16"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Cost Breakdown -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Total Cost" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                                <ItemsControl x:Name="CostList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Key}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Value}"
                                                           Foreground="{StaticResource SecondaryBrush}"
                                                           FontWeight="Bold" FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="NoCostText"
                                           Text="No resources required"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Visibility="Collapsed"
                                           HorizontalAlignment="Center"
                                           Margin="0,8"/>
                            </StackPanel>
                        </Border>

                        <!-- Templates Section -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Apply Template" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                                <ItemsControl x:Name="TemplatesList" ItemsSource="{Binding Templates}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,12" Padding="12" CornerRadius="8"
                                                    Background="{StaticResource SurfaceLightBrush}"
                                                    Cursor="Hand">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{Binding DataContext.ApplyTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                                        <TextBlock Text=" â€¢ " Foreground="{StaticResource TextMutedBrush}" Margin="4,0"/>
                                                        <TextBlock Text="{Binding Category}"
                                                                   Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Output: " Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                                        <TextBlock Text="{Binding OutputItem}" Foreground="{StaticResource SecondaryBrush}"
                                                                   FontSize="12" FontWeight="SemiBold" Margin="0,0,4,0"/>
                                                        <TextBlock Text="@" Foreground="{StaticResource TextMutedBrush}" FontSize="12" Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding OutputRate}" Foreground="{StaticResource SuccessBrush}"
                                                                   FontSize="12" FontWeight="Bold"/>
                                                        <TextBlock Text="/min" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button Content="Save Plans"
                                    Command="{Binding SavePlansCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Refresh"
                                    Command="{Binding LoadPlansCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Empty State: No Plan Selected -->
                <Border x:Name="EmptyStatePanel">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
                        <TextBlock Text="ðŸ—ï¸" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="No plan selected"
                                   FontSize="20" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Select a plan from the sidebar or create a new one"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
