<UserControl x:Class="ArcadiaTracker.App.Views.RoadmapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Roadmap" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="Personalized recommendations based on your progress"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

            <!-- Current Phase Advice -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16"
                    Background="{StaticResource SurfaceLightBrush}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ’¡" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Phase Advice" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="PhaseAdviceText"
                               Text="Loading..."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Recommendations -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Recommendations" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <ItemsControl x:Name="RecommendationsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,12" Padding="16" CornerRadius="8"
                                        Background="{StaticResource SurfaceLightBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Text="{Binding Icon}"
                                                   FontSize="28"
                                                   VerticalAlignment="Top"
                                                   Margin="0,0,16,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="15" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       FontSize="13"
                                                       Margin="0,6,0,0"/>
                                            <Border Background="{StaticResource SurfaceBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Margin="0,8,0,0"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Priority Indicator -->
                                        <Border Grid.Column="2"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Priority}" Value="0">
                                                            <Setter Property="Background" Value="#33FF4757"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="1">
                                                            <Setter Property="Background" Value="#33FF6B35"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="LOW"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="0">
                                                                <Setter Property="Text" Value="HIGH"/>
                                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="1">
                                                                <Setter Property="Text" Value="MEDIUM"/>
                                                                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <TextBlock x:Name="NoRecommendationsText"
                               Text="Great job! No recommendations at this time."
                               Foreground="{StaticResource TextMutedBrush}"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,16"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
