<UserControl x:Class="ArcadiaTracker.App.Views.WizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid>
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Visibility="Collapsed" Background="#CC0D1117"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading recommendations..." FontSize="16"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,16,0,0"
                             Style="{StaticResource SciFiProgressBar}"/>
            </StackPanel>
        </Border>

        <!-- Error Display -->
        <Border x:Name="ErrorDisplay" Visibility="Collapsed" Background="{StaticResource BackgroundBrush}"
                Panel.ZIndex="998">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="400">
                <TextBlock Text="âš ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock x:Name="ErrorMessageText" Text="" FontSize="14" TextWrapping="Wrap"
                           Foreground="{StaticResource WarningBrush}"
                           HorizontalAlignment="Center" TextAlignment="Center"/>
                <Button x:Name="RetryButton" Content="Retry" Margin="0,24,0,0"
                        Padding="24,10" FontSize="14" FontWeight="SemiBold"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="{StaticResource BackgroundBrush}"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer x:Name="MainContent" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="What's Next Wizard" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="Smart recommendations for your next steps"
                           Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

                <!-- Progress Header -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Current Progress" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Phase:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                                <TextBlock x:Name="PhaseText" Text="Unknown"
                                           Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar x:Name="ProgressBar" Value="0" Maximum="100"
                                             Style="{StaticResource SciFiProgressBar}" Height="12"/>
                                <TextBlock x:Name="ProgressText" Grid.Column="1" Text="0%"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="12,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>

                        <Button x:Name="RefreshButton" Grid.Column="1" Content="ðŸ”„ Refresh"
                                Padding="16,10" FontSize="13" FontWeight="SemiBold"
                                Background="{StaticResource SurfaceLightBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource PrimaryBrush}"
                                Cursor="Hand" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Primary Goal Card -->
                <Border x:Name="PrimaryGoalCard" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸŽ¯ Primary Goal" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="PrimaryGoalName" Text="No active goal"
                                           FontSize="20" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,8,0,0"/>
                                <TextBlock x:Name="PrimaryGoalDescription" Text=""
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <ComboBox x:Name="GoalSelector" Grid.Column="1"
                                      Width="200" Padding="12,8"
                                      VerticalAlignment="Top"/>
                        </Grid>

                        <!-- Goal Progress -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ProgressBar x:Name="GoalProgressBar" Value="0" Maximum="100"
                                         Style="{StaticResource SciFiProgressBar}" Height="10"/>
                            <TextBlock x:Name="GoalProgressText" Grid.Column="1" Text="0%"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Milestones -->
                        <TextBlock Text="Milestones" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                        <ItemsControl x:Name="MilestonesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                            Background="{StaticResource SurfaceLightBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" FontSize="16" Margin="0,0,12,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="Text" Value="âœ…"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="False">
                                                                <Setter Property="Text" Value="â­•"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- No milestones message -->
                        <TextBlock x:Name="NoMilestonesText" Text="No milestones available"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,16"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Suggestions Section -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Suggestions List -->
                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Recommended Actions" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                            <ListBox x:Name="SuggestionsList" Background="Transparent" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="SuggestionItem" Margin="0,0,0,8" Padding="12,10"
                                                CornerRadius="8"
                                                Background="{StaticResource SurfaceLightBrush}"
                                                BorderThickness="2" BorderBrush="Transparent">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               FontWeight="SemiBold" FontSize="13"/>
                                                    <TextBlock Text="{Binding Category}" FontSize="10"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Padding="8,4" CornerRadius="4" Margin="8,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                                                                    <Setter Property="Background" Value="#FF4757"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Priority}" Value="High">
                                                                    <Setter Property="Background" Value="#FF6B35"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                                    <Setter Property="Background" Value="#FFB800"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                                    <Setter Property="Background" Value="#00FF88"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Priority}" FontSize="10" FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- No suggestions message -->
                            <TextBlock x:Name="NoSuggestionsText" Text="No suggestions available"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Center" Margin="0,24"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Suggestion Details -->
                        <Border Grid.Column="1" x:Name="SuggestionDetails"
                                Padding="16" CornerRadius="8"
                                Background="{StaticResource SurfaceBrush}"
                                BorderThickness="2" BorderBrush="{StaticResource PrimaryBrush}">
                            <StackPanel>
                                <TextBlock x:Name="SelectedTitle" Text="Select a suggestion"
                                           FontSize="18" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,0,0,12"/>
                                <TextBlock x:Name="SelectedDescription" Text=""
                                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" Margin="0,0,0,16"/>

                                <!-- Steps -->
                                <TextBlock x:Name="StepsHeader" Text="Steps to Complete" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"
                                           Visibility="Collapsed"/>
                                <ItemsControl x:Name="StepsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding Index}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                                <Run Text=". "/>
                                                <Run Text="{Binding Text}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Reasoning -->
                                <TextBlock x:Name="ReasoningHeader" Text="Why This Matters" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,16,0,8"
                                           Visibility="Collapsed"/>
                                <TextBlock x:Name="ReasoningText" Text="" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>

                                <!-- Benefits -->
                                <TextBlock x:Name="BenefitsHeader" Text="Benefits" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource SuccessBrush}" Margin="0,16,0,8"
                                           Visibility="Collapsed"/>
                                <ItemsControl x:Name="BenefitsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="âœ“ " Foreground="{StaticResource SuccessBrush}"/>
                                                <Run Text="{Binding}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
