<UserControl x:Class="ArcadiaTracker.App.Views.ActivationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <Border Style="{StaticResource CardStyle}" MaxWidth="520" VerticalAlignment="Top" Margin="0,24">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Activate Feature"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Enter your activation code below. Codes are issued after purchase and unlock features on this device."
                       Style="{StaticResource SubheaderTextStyle}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,24"/>

            <!-- Code Entry -->
            <TextBlock Text="ACTIVATION CODE" FontSize="11"
                       Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
            <TextBox x:Name="CodeTextBox"
                     FontSize="18"
                     FontFamily="Consolas"
                     FontWeight="SemiBold"
                     MaxLength="29"
                     Background="{StaticResource SurfaceLightBrush}"
                     Foreground="{StaticResource TextPrimaryBrush}"
                     BorderBrush="{StaticResource PrimaryBrush}"
                     BorderThickness="1"
                     Padding="12,10"
                     CharacterCasing="Upper"
                     Text="ARCA-"
                     CaretBrush="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Format: ARCA-XXXX-XXXX-XXXX-XXXX-XXXX"
                       FontSize="11"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,4,0,0"/>

            <!-- Status Message -->
            <Border x:Name="StatusBorder"
                    Margin="0,16,0,0"
                    Padding="12,8"
                    CornerRadius="6"
                    Visibility="Collapsed">
                <TextBlock x:Name="StatusText"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,24,0,0" HorizontalAlignment="Right">
                <Button x:Name="ActivateButton"
                        Content="Activate"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="ActivateButton_Click"
                        MinWidth="120"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="12,0,0,0"
                        Click="CancelButton_Click"
                        MinWidth="100"/>
            </StackPanel>

            <!-- Active Licenses -->
            <Separator Margin="0,24,0,16" Background="{StaticResource SurfaceLightBrush}"/>

            <TextBlock Text="ACTIVE FEATURES" FontSize="11"
                       Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>

            <ItemsControl x:Name="ActiveFeaturesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,6" Padding="12,8" CornerRadius="6"
                                Background="{StaticResource SurfaceLightBrush}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“" FontSize="14"
                                           Foreground="{StaticResource SuccessBrush}"
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock x:Name="NoFeaturesText"
                       Text="No premium features activated yet."
                       Foreground="{StaticResource TextMutedBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,8"/>
        </StackPanel>
    </Border>
</UserControl>
