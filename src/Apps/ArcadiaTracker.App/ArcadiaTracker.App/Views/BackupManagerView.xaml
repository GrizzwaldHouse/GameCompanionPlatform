<UserControl x:Class="ArcadiaTracker.App.Views.BackupManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Backup Manager" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="Automatic save protection — never lose progress again"
                       Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,24"/>

            <!-- Quick Stats -->
            <UniformGrid Columns="3" Margin="0,0,0,16">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="TOTAL BACKUPS" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock x:Name="TotalBackupsText" Text="0"
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="TOTAL SIZE" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock x:Name="TotalSizeText" Text="0 KB"
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="LAST BACKUP" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock x:Name="LastBackupText" Text="Never"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Actions -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="CreateBackupButton"
                                Content="Create Backup Now"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="CreateBackupButton_Click"/>
                        <Button x:Name="RefreshListButton"
                                Content="↻ Refresh"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="12,0,0,0"
                                Click="RefreshListButton_Click"/>
                    </StackPanel>

                    <!-- Status -->
                    <Border x:Name="BackupStatusBorder"
                            Margin="0,12,0,0"
                            Padding="12,8"
                            CornerRadius="6"
                            Visibility="Collapsed">
                        <TextBlock x:Name="BackupStatusText" FontSize="13" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Auto-Backup Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Auto-Backup" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                    <CheckBox x:Name="AutoBackupCheckBox"
                              Content="Enable automatic backups when save changes are detected"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Checked="AutoBackupCheckBox_Changed"
                              Unchecked="AutoBackupCheckBox_Changed"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Keep last"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="RetentionComboBox"
                                  SelectedIndex="2"
                                  Background="{StaticResource SurfaceBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}">
                            <ComboBoxItem Content="5 backups"/>
                            <ComboBoxItem Content="10 backups"/>
                            <ComboBoxItem Content="25 backups"/>
                            <ComboBoxItem Content="50 backups"/>
                            <ComboBoxItem Content="Unlimited"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Backup History -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Backup History" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <ItemsControl x:Name="BackupList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="12,10" CornerRadius="8"
                                        Background="{StaticResource SurfaceLightBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TimestampDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding SizeDisplay}"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   VerticalAlignment="Center" Margin="16,0"/>
                                        <Button Grid.Column="2"
                                                Content="Restore"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="8,4" FontSize="11"
                                                Tag="{Binding BackupId}"
                                                Click="RestoreButton_Click"
                                                Margin="0,0,8,0"/>
                                        <Button Grid.Column="3"
                                                Content="Delete"
                                                Padding="8,4" FontSize="11"
                                                Foreground="{StaticResource ErrorBrush}"
                                                Background="Transparent"
                                                BorderBrush="{StaticResource ErrorBrush}"
                                                BorderThickness="1"
                                                Tag="{Binding BackupId}"
                                                Click="DeleteButton_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock x:Name="NoBackupsText"
                               Text="No backups yet. Create one to get started."
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16"
                               Visibility="Visible"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
